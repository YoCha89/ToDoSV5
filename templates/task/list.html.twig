{% extends 'base.html.twig' %}

{% block header_img %}<img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">{% endblock %}

{% block body %}
    <a href="{{ path('task_create') }}" class="btn btn-info pull-right">Créer une tâche</a>
    <div class="row">
        {% for task in tasks %}
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h4 class="pull-right">
                        {% if task.isDone %}<span class="glyphicon glyphicon-ok"></span>{% else %}<span class="glyphicon glyphicon-remove"></span>{% endif %}
                    </h4>
                    <h4>
                    {% if is_granted('ROLE_ADMIN') or task.user == app.user%}
                        <a href="{{ path('task_edit', {'id' : task.id }) }}">
                    {% endif %}
                    
                    {{ task.title }}
                    {% if is_granted('ROLE_ADMIN') or task.user == app.user%}
                        </a>
                    {% endif %}
                    </h4>

                    <p style="color:#bacfdf; margin-bottom:8px">{{ task.user.email }}</p>
                    <p>{{ task.content }}</p>
                </div>

                {% if task.user.username != 'anonymous' and task.user == app.user%}
                    {% set go = true %}
                {% elseif is_granted('ROLE_ADMIN') %}
                        {% set go = true %}
                {% endif %}

                {% if go is defined%}
                    <div>
                        <form action="{{ path('task_toggle', {'id' : task.id }) }}">
                            <button class="btn btn-success btn-sm pull-right">
                                {% if not task.isDone %}Marquer comme faite{% else %}Marquer non terminée{% endif %}
                            </button>
                        </form>
                        <form action="{{ path('task_delete', {'id' : task.id }) }}">
                            <button class="btn btn-danger btn-sm pull-right">Supprimer</button>
                        </form>
                    </div>
                {% endif %}
            </div>
        </div>
        {% else %}
            <div class="alert alert-warning" role="alert">
                Il n'y a pas encore de tâche enregistrée. 
                <a href="{{ path('task_create') }}" class="btn btn-warning pull-right">Créer une tâche</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
